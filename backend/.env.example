# Solar Investigator ADK Environment Configuration

# Application Settings
APP_NAME=Solar Investigator ADK
APP_VERSION=0.1.0
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Configuration for ADK DatabaseSessionService
DATABASE_URL=postgresql://adk_user:adk_password@localhost:5432/adk_solar_investigator
DATABASE_ECHO=false

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
RELOAD=true

# Google Cloud Configuration
# GOOGLE_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# ADK Configuration
ADK_MODEL_NAME=gemini-1.5-pro
ADK_TEMPERATURE=0.1
ADK_MAX_TOKENS=8192

# Investigation Configuration
MAX_INVESTIGATION_DURATION=300
MAX_CONCURRENT_INVESTIGATIONS=10

# Session and Memory Configuration
SESSION_TTL=3600
MEMORY_MAX_TOKENS=4096

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
